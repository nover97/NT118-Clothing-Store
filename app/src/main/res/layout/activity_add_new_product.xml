<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNewProduct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/pink"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:weightSum="3">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_chevron_left_24"
            android:paddingVertical="10dp"
            />
        <TextView
            android:id="@+id/header_title"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Add new product"/>
        <ImageView
            android:paddingVertical="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart"/>

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:padding="5dp"
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textAlignment="textStart"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Image"/>

        <ImageView
            android:src="@color/cardview_shadow_start_color"
            android:id="@+id/im_avatar_product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            app:civ_border_width="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Name"
            />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Price"/>
        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Discount"/>
        <Spinner
            android:padding="5dp"
            android:id="@+id/spinner_discount"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="%"/>
        <EditText
            android:id="@+id/et_dis_price"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_S"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="S"/>
            <CheckBox
                android:id="@+id/cb_M"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="M"/>
            <CheckBox
                android:id="@+id/cb_L"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="L"/>
            <CheckBox
                android:id="@+id/cb_XL"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="XL"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Size"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_black"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Black"/>
            <CheckBox
                android:layout_width="70dp"
                android:id="@+id/cb_white"
                android:layout_height="wrap_content"
                android:text="White"/>
            <CheckBox
                android:id="@+id/cb_red"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Red"/>
            <CheckBox
                android:id="@+id/cb_yellow"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Yellow"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Category"/>
        <Spinner
            android:padding="5dp"
            android:id="@+id/spinner_cate"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:text="Description"/>
        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_clear"
                android:backgroundTint="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"/>
            <Button
                android:id="@+id/btn_save"
                android:backgroundTint="@color/green"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>